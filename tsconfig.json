{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./",
		"outDir": "./dist",
		"rootDir": "./src",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext"
		],
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
